# Environment variables for qbit-arr
# Copy this file to .env and customize for your setup

# qBittorrent
QBIT_HOST=localhost
QBIT_PORT=8080
QBIT_USERNAME=admin
QBIT_PASSWORD=adminadmin

# Radarr
RADARR_HOST=localhost
RADARR_PORT=7878
RADARR_API_KEY=your_radarr_api_key_here

# Sonarr
SONARR_HOST=localhost
SONARR_PORT=8989
SONARR_API_KEY=your_sonarr_api_key_here

# Paths
PATH_TORRENT_MOVIES=/data/media/torrents/movies
PATH_TORRENT_TV=/data/media/torrents/tv
PATH_LIBRARY_MOVIES=/data/media/libraries/movies
PATH_LIBRARY_TV=/data/media/libraries/tv

# Path mapping for Docker containers (if qBittorrent/Radarr/Sonarr report different paths)
PATH_REMOTE_PATH_BASE=/media
PATH_LOCAL_PATH_BASE=/data/media

# Web (optional)
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_RELOAD=false
